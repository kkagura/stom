.st-input {
  display: flex;
  border-radius: 4px;
  overflow: hidden;
  transition: all 0.3s ease;
  line-height: 22px;
  font-size: 12px;
  .st-input__wrapper {
    height: 100%;
    flex-grow: 1;
    overflow: hidden;
    display: flex;
  }
  .st-input__inner {
    flex-grow: 1;
    width: 100%;
    border-radius: 4px;
    padding: 0 6px;
    outline: none;
    border: 1px solid #dcdfe6;
    height: 22px;
    color: #606266;
    &:hover {
      border-color: #a8abb2;
    }
    &:focus {
      border-color: var(--st-color-primary);
    }
  }
  &.has-prefix {
    .st-input__inner {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
    }
  }
  &.has-suffix {
    .st-input__inner {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }
  }
  .st-input__prefix {
    text-align: center;
    padding: 0px 6px;
    border: 1px solid #dcdfe6;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    border-right: none;
    background-color: #f5f7fa;
    color: #909399;
  }
  .st-input__suffix {
    text-align: center;
    padding: 0px 6px;
    border: 1px solid #dcdfe6;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    border-left: none;
    background-color: #f5f7fa;
    color: #909399;
  }
}
