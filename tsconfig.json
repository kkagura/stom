{
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "**/dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "paths": {
      "@stom/ui/vue": ["packages/ui/src/frameworks/vue/index.ts"],
      "@stom/core": ["packages/core/src/index.ts"],
      "@stom/geo": ["packages/geo/src/index.ts"],
      "@stom/shared": ["packages/shared/src/index.ts"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true
  }
}
